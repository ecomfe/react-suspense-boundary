{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2018",
        "module": "ESNext",
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "react-suspense-boundary": ["./src"]
        }
    },
    "include": [
        "src",
        "demo"
    ]
}
